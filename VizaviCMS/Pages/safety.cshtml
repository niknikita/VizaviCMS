                                <svg height="@safetycardsContent[4].SafetyItem.iconHeight.Text" width="@safetycardsContent[4].SafetyItem.iconWidth.Text">
                                    <use xlink:href="#@safetycardsContent[4].SafetyItem.icon.Text" xmlns:xlink="http://www.w3.org/1999/xlink">
                                    </use>
                                </svg>
                            </div>
                            
                        </div>
                        
                        

                        <div class="flag-card__headline">
                            <h3 class="h4">@safetycardsContent[4].TitlePart.Title</h3>
                        </div>
                        
                        

                        <div class="flag-card__body">
                            @Html.Raw(safetycardsContent[4].HtmlBodyPart.Html)
                        </div>
                        
                    </div>
                    
                </div>
                
                

                <div class="flag-card bg-dark">
                    
                    <div class="flag-card__box">
                        
                        <div class="flag-card__icon">
                            
                            <div class="flag-card__icon-box">
                                <svg height="@safetycardsContent[5].SafetyItem.iconHeight.Text" width="@safetycardsContent[5].SafetyItem.iconWidth.Text">
                                    <use xlink:href="#@safetycardsContent[5].SafetyItem.icon.Text" xmlns:xlink="http://www.w3.org/1999/xlink">
                                    </use>
                                </svg>
                            </div>
                            
                        </div>
                        
                        

                        <div class="flag-card__headline">
                            <h3 class="h4">@safetycardsContent[5].TitlePart.Title</h3>
                        </div>
                        
                        

                        <div class="flag-card__body">
                            @Html.Raw(safetycardsContent[5].HtmlBodyPart.Html)
